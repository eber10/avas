---
import Image from "astro/components/Image.astro";
import Logo from "../assets/images/LogoEmpresa.png";
const { settings } = Astro.props;
const topNavbarBgColor = '#143663'; // azul oscuro
const accentColor = '#e38b29'; // naranja
---
<header class="w-full font-semibold shadow-md">
  <!-- Franja azul superior -->
  <div 
    class="w-full flex flex-wrap justify-center sm:justify-end items-center 
           gap-4 sm:gap-6 px-4 sm:px-8 py-3 text-white"
    style={`background-color: ${topNavbarBgColor};`}
  >
    <!-- Enlaces de navegación -->
    <nav class="flex flex-wrap justify-center sm:justify-end items-center gap-4 text-sm font-light">
      {
        settings.nav.map((item) => (
          <a
            href={item.link}
            class="hover:text-blue-200 transition-colors whitespace-nowrap"
          >
            {item.title}
          </a>
        ))
      }
    </nav>
    <!-- Botón Mi Cuenta -->
    <a
      href="/login"
      class="px-5 py-2 rounded-full font-medium text-white text-sm sm:text-base 
             transition-colors hover:opacity-90"
      style={`background-color: ${accentColor};`}
    >
      {settings.mi_cuenta.title}
    </a>
  </div>

  <!-- Logo debajo del header azul -->
  <div class="w-full bg-white flex justify-center sm:justify-start items-center px-6 sm:px-4 py-4 shadow-sm">
    <a href="/" aria-label={settings.title + ' - Home'}>
      <Image
        alt="Logo Navas Inversiones e Inmobiliaria"
        src={Logo}
        width={120}
        height={60}
        class="object-contain"
      />
    </a>
  </div>
</header>