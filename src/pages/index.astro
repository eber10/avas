---
import Layout from "../layouts/Layout.astro";
import HeaderMain from "../components/HeaderMain.astro"; 
import Image from "astro/components/Image.astro"; 
import ProjectCard from "../components/ProjectCard.astro"; 
import AsesoresCard from "../components/AsesoresCard.astro";
import HeroBannerSlider from "../components/HeroBannerSlider.astro"; 
import global_settings from "../data/global_settings.json";
import BannerImage from "../assets/images/baner.png"; 
import BannerImage2 from "../assets/images/baner2.jpg"; 
import BannerImage3 from "../assets/images/baner3.jpg"; 
import imgProject1 from "../assets/images/ProyectoVilla.jpg"; 
import imgProject2 from "../assets/images/ProyectoCostanera.jpg";
import imgProject3 from "../assets/images/ProyectoFamilia.jpg";
import imgAsesor1 from "../assets/images/Asesor1.jpg";
import imgAsesor2 from "../assets/images/Asesor2.jpg";
import imgAsesor3 from "../assets/images/Asesor3.jpg";
const CARD_WIDTH = 600; //Dimensiones estándar para tarjetas 
const CARD_HEIGHT = 400; 
const CARD_ASESOR_WIDTH = 500;//Dimensiones para tarjetas de Asesores
const CARD_ASESOR_HEIGHT = 500;
const settings = global_settings;
const slides = [ //array de slides para pasar al componente 
    { image: BannerImage, alt: "Adquiere tu lote cerca a la costanera - Navas" },
    { image: BannerImage2, alt: "Invierte en tu futuro - Navas" },
    { image: BannerImage3, alt: "Construye tus sueños aquí - Navas" },
];
---
<Layout title={settings.title}>
     <HeaderMain settings={settings} />
        <section class="w-full"> {/* Sección Banner */}
            <HeroBannerSlider slides={slides} /> 
        </section>
        <section id="proyectos" class="py-16 bg-white"> {/* Sección Proyectos */}
            <div class="bs-container"> 
                <h2 class="text-4xl font-bold text-center mb-12 text-[#143663]">
                    Nuestros Proyectos
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <ProjectCard 
                        title="Villa del Sol" 
                        description="Lotes residenciales cerca de la costanera, listos para construir."
                        image={imgProject1} 
                        width={CARD_WIDTH}
                        height={CARD_HEIGHT}
                    /> 
                    <ProjectCard 
                        title="Bosque Municipal" 
                        description="Tu inversión segura: terrenos con acceso a zonas verdes exclusivas."
                        image={imgProject2} 
                        width={CARD_WIDTH}
                        height={CARD_HEIGHT}
                    />
                    <ProjectCard 
                        title="La Perla del Sur" 
                        description="Proyectos ideales para la familia con financiamiento directo."
                        image={imgProject3} 
                        width={CARD_WIDTH}
                        height={CARD_HEIGHT}
                    />
                </div> 
                <div class="flex justify-center mt-12 space-x-2">
                    <span class="block w-3 h-3 bg-[#143663] rounded-full"></span>
                    <span class="block w-3 h-3 bg-gray-300 rounded-full"></span>
                    <span class="block w-3 h-3 bg-gray-300 rounded-full"></span>
                </div>
            </div>
        </section>
        <section id="nosotros" class="py-20 bg-amber-50">  {/* Sección Asesores */}
            <div class="bs-container">
                {/* Texto de Confianza */}
                <p class="text-center text-xl font-bold max-w-4xl mx-auto mb-12 text-[#143663] leading-relaxed">
                En Navas Inmobiliaria, te acompañamos en cada paso para que esa inversión 
                <br>sea segura, legal y al alcance de tus posibilidades.
                </p>
                {/* Contenedor de las tarjetas de asesores */}
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {/* TARJETA 1: Asesor 1 */}
                    <AsesoresCard 
                        title="INVERSIÓN SEGURA Y TRANSPARENTE" 
                        person="Katherine - Asesora Inmobiliaria"
                        image={imgAsesor1}
                        width={CARD_ASESOR_WIDTH}
                        height={CARD_ASESOR_HEIGHT}
                    /> 
                    {/* TARJETA 2: Asesor 2 */}
                    <AsesoresCard 
                        title="POTENCIA TU INVERSIÓN" 
                        person="Edson José Vásquez Flores - Asesor Inmobiliario"
                        image={imgAsesor2}
                        width={CARD_ASESOR_WIDTH}
                        height={CARD_ASESOR_HEIGHT}
                    /> 
                    {/* TARJETA 3: Asesor 3 */}
                    <AsesoresCard 
                        title="TÚ INVERSIÓN ASEGURADA" 
                        person="Milagros - Asesora Inmobiliaria"
                        image={imgAsesor3}
                        width={CARD_ASESOR_WIDTH}
                        height={CARD_ASESOR_HEIGHT}
                    /> 
                </div>
            </div>
        </section>
</Layout>